{
    "manifest_version": 2,
    "name": "GBF2Weibo",
    "description": "GBF Raid to Weibo",
    "version": "0.0.2",
    "browser_action": {
        "default_icon": {
            "128": "icons/B2-128.png"
        },
        "default_popup": "popup.html",
        "default_title": "copy the Raid info"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "*://game.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*"
    ]
}